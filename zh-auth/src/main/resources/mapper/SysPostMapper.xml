<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="net.zhenghao.zh.auth.dao.SysPostMapper">

	<select id="listForPage" resultType="SysPostEntity" flushCache="true">
		SELECT
			`post_id`,
			`post_name`,
			`post_code`,
			`order_num`,
			`creator_id`,
			`create_time`,
			`modifier_id`,
			`modified_time`
		FROM
			sys_post
		<where>
			<if test="postName != null and postName.trim() != ''">
				AND post_name LIKE concat('%',#{postName},'%')
			</if>
			<if test="postCode != null and postCode.trim() != ''">
				AND post_code LIKE concat('%',#{postCode},'%')
			</if>
		</where>
		<choose>
			<when test="sortOrder != null and sortOrder == 'ascend'">
				ORDER BY create_time
			</when>
			<when test="sortOrder != null and sortOrder == 'descend'">
				ORDER BY create_time DESC
			</when>
			<otherwise>
				ORDER BY post_id DESC
			</otherwise>
		</choose>
	</select>
	
	<insert id="save">
		INSERT INTO sys_post (
			`post_name`,
			`post_code`,
			`order_num`,
			`creator_id`,
			`create_time`
		)
		VALUES (
			#{postName},
			#{postCode},
			#{orderNum},
			#{creatorId},
			NOW()
		)
	</insert>
	
	<select id="getObjectById" resultType="SysPostEntity">
		SELECT
			`post_id`,
			`post_name`,
			`post_code`,
			`order_num`,
			`creator_id`,
			`create_time`,
			`modifier_id`,
			`modified_time`
		FROM
			sys_post
		WHERE
			post_id = #{postId}
	</select>
	
	<update id="update">
		UPDATE sys_post
	 	<set>
			<if test="postName != null">`post_name` = #{postName},</if>
			<if test="postCode != null">`post_code` = #{postCode},</if>
			<if test="orderNum != null">`order_num` = #{orderNum},</if>
			<if test="modifierId != null">`modifier_id` = #{modifierId},</if>
			modified_time = NOW()
		</set>
		WHERE
			post_id = #{postId}
	</update>

    <delete id="remove">
        DELETE
        FROM
			sys_post
        WHERE
			post_id = #{value}
    </delete>
	
	<delete id="batchRemove">
		DELETE
		FROM
			sys_post
		WHERE
			post_id IN
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>
	
	<cache type="org.mybatis.caches.ehcache.EhcacheCache"/>
	
</mapper>